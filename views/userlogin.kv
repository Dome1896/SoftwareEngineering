#:kivy 1.0.9
<LoginScreen>:
    username: username
    password: password
    FloatLayout:

        Label:
            #text: "Brainboost - AI Flashcards"
            font_size: 25
            size_hint: (1, 0.3)
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_name: "Impact"


        Image:
            source: "ressources/Logo_big.jpeg"
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            size_hint:( 0.45,0.45)

        TextInput:
            id: username
            hint_text: "Username"
            multiline: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            size_hint: (0.3, 0.07)

        TextInput:
            id: password
            hint_text: "Password"
            multiline: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            password: True
            size_hint: (0.3, 0.07)

        Button:
            text: "Login"
            size_hint: (0.22, 0.07)
            pos_hint: {'center_x': 0.5, 'center_y': 0.17}
            font_size: 17
            on_release: root.verify_credentials()

        Button:
            text: "Sign up"
            size_hint: (0.22, 0.07)
            pos_hint: {'center_x': 0.5, 'center_y': 0.07}
            background_color: "lightgreen"
            font_size: 17
            on_release: root.register_user()
            


        Label:
            id: message
            text: ""
            color: 1, 0, 0, 1  # Rot
            font_size: 16
            pos_hint: {'center_x': 0.8, 'center_y': 0.07}

