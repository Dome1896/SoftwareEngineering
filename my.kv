<ShowCards>:
    ScrollView:
        size_hint: (1, 1)
        BoxLayout:
            id: cards_box
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: 10
            spacing: 10

<P>:
    Button:
        id: addCard
        text: "Add Card"
        size_hint: (0.3, 0.1)
        font_size: 20
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        on_press: app.createCard(questionName.text, questionAnswer.text, questionCategory.text)
        pos_hint: {"center_x": 0.5, "center_y": 0.9}

        
    TextInput:
        id: questionName
        hint_text: "Type Question"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
    TextInput:
        id: questionAnswer
        hint_text: "Type Answer"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    TextInput:
        id: questionCategory
        hint_text: "Type Category"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.3}

<Button>:
    color: 0.5, 0.5, 0.8, 1
    font_size: 8

<Label>:
    font_size: 32
    size_hint: (0.3, 0.3)
    color: 0.3, 0.6, 0.7, 1

<TextInput>:
    font_size: 16
    size_hint: (0.3, 0.1)
    color: 0.3, 0.6, 0.7, 1

<MyFloatLayout>:
    canvas.before:
        Color:
            rgba: 0.85, 0.85, 0.85, 1
        Rectangle:
            size: self.size
            pos: self.pos

    ActionBar:
        id: toolbar
        pos_hint: {'x': 0, 'y': 0}
        size_hint: 0.2, 1
        orientation: 'vertical'

    Button:
        id: t_button
        size_hint: 0.01, 0.075
        pos_hint: {'x': 0.205, 'y': 0.5}
        on_press: root.collapse_toolbar()
        on_release: root.expand_toolbar()
    Button:
        text: "Next Card"
        pos_hint: {"x": 0.6, 'y':0.6}
        size_hint: (0.2, 0.2)
        font_size: 20
        on_press: root.nextCard()
    Button:
        text: "Add Card"
        pos_hint: {"x": 0.4}
        size_hint: (0.1, 0.1)
        font_size: 20
        on_release: root.btn()

    Button:
        text: "Show Cards"
        pos_hint: {"x": 0.8}
        size_hint: (0.1, 0.1)
        font_size: 20
        on_release: root.showCardsWindow()

    Label:
        id: question_label
        text: "Placeholder"
        pos_hint: {"center_x": 0.5, "center_y": 0.8}

    Label:
        id: answer_label
        text: "Placeholder"
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

    Label:
        id: category_label
        text: "Placeholder"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
