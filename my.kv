<P>:
    Button:
        text: "Add Card"
        size_hint: (0.3, 0.1)
        font_size: 20
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
    TextInput:
        hint_text: "Type Question"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    TextInput:
        hint_text: "Type Answer"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
 
<Button>:
    color: 0.5, 0.5, 0.8, 1
    font_size: 8
 
<Label>:
    font_size: 32
    size_hint: (0.3, 0.3)
    color: 0.3, 0.6, 0.7, 1
 
<TextInput>:
    font_size: 16
    size_hint: (0.3, 0.1)
    color: 0.3, 0.6, 0.7, 1
 
<MyFloatLayout>:
    canvas.before:
        Color:
            rgba: 0.85, 0.85, 0.85, 1
        Rectangle:
            size: self.size
            pos: self.pos
 
    ActionBar:
        id: toolbar
        pos_hint: {'x': 0, 'y': 0}
        size_hint: 0.2, 1
        orientation: 'vertical'
 
    Button:
        id: t_button
        size_hint: 0.01, 0.075
        pos_hint: {'x': 0.205, 'y': 0.5}
        on_press: root.collapse_toolbar()
        on_release: root.expand_toolbar()
 
    Button:
        text: "Add Card"
        pos_hint: {"x": 0.4}
        size_hint: (0.1, 0.1)
        font_size: 20
        on_release: root.btn()