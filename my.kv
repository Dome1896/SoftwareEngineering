<MyFloatLayout>:
    canvas.before:
        Color:
            rgba: 0.85, 0.85, 0.85, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.2, 0.85, 0.85, 1
            Rectangle:
                size: self.size
                pos: self.pos
        id: toolbar
        pos_hint: {'x': 0, 'y': 0}
        size_hint: 0.2, 1
        orientation: 'vertical'
        Button:
            text: 'Add Folder'
            size_hint: None, None
            size: 100, 50
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    Button:
        id: t_button
        text: "Toggle Toolbar"
        size_hint: None, None
        size: 50, 50
        pos_hint: {'x': 0.2, 'y': 0.5}
        on_release: root.toggle_toolbar()

    Button:
        text: "Add Card"
        pos_hint: {"x": 0.4}
        size_hint: (0.1, 0.1)
        font_size: 20
        on_release: root.btn()

    Button:
        text: "Next"
        pos_hint: {"x": 0.6}
        size_hint: (0.1, 0.1)
        font_size: 20
        on_release: root.nextCard()

    #Name der Frage
    Label:
        id: question_label
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
    #Antwort der Frage
    Label:
        id: answer_label
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

    Label:
        id: category_label
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.3}

<P>:
    Button:
        id: addCard
        text: "Add Card"
        size_hint: (0.3, 0.1)
        font_size: 20
        pos_hint: {"center_x": 0.5, "center_y": 0.9}
    TextInput:
        id: questionName
        hint_text: "Type Question"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
    TextInput:
        id: questionAnswer
        hint_text: "Type Answer"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    TextInput:
        id: questionCategory
        hint_text: "Type Category"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.3}

<Button>:
    color: 0.5, 0.5, 0.8, 1
    font_size: 8

<Label>:
    font_size: 32
    size_hint: (0.3, 0.3)
    color: 0.3, 0.6, 0.7, 1

<TextInput>:
    font_size: 16
    size_hint: (0.3, 0.1)
    color: 0.3, 0.6, 0.7, 1