<PopupToolbar>:
    folder_name_input: folder_name_input
    Button:
        text: "Create Folder"
        font_size: 14
        pos_hint: {"center_x": 0.5, 'y': 0.1}
        size_hint: 0.5, 0.2
        on_release: 
            root.create_folder(root.ids.folder_name_input.text)
    
    TextInput:
        id: folder_name_input
        hint_text: "Type Folder Name"
        pos_hint: {'x': 0.1, 'y': 0.5}
        size_hint: 0.85, 0.3

<Folder>:
    orientation: 'horizontal'
    size_hint_y: None
    height: self.minimum_height
    padding: [10, 10, 10, 10]
    spacing: 10

    Image:
        id: folder_icon
        source: 'folderclosed.png'
        size_hint: None, None
        size: 30, 30
        allow_stretch: True
        keep_ratio: True

    Button:
        text: root.folder_name
        size_hint: None, None
        height: 30
        font_size: 20
        width: self.texture_size[0] + 20
        valign: 'middle'
        halign: 'left'
        text_size: None, None
        on_release: 
            root.change_icon_folder()
            root.reset_cards()
            root.get_all_cards_for_category(root.folder_name)

        

    BoxLayout:
        id: content
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height

#------------------------------- Start Popup Add Card -----------------------
<PopupAddCard>:
    Button:
        id: addCard
        text: "Add Card"
        size_hint: (0.25, 0.1)
        font_size: 20
        pos_hint: {"center_x": 0.5, "center_y": 0.9}
    TextInput:
        id: questionName
        hint_text: "Type Question"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
    TextInput:
        id: questionAnswer
        hint_text: "Type Answer"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    TextInput:
        id: questionCategory
        hint_text: "Type Category"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
#------------------------------- Ende Popup Add Card -----------------------


