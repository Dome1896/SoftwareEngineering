WindowManager:
    FirstWindow:
    SecondWindow:

<FirstWindow>:
    name: "first"
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        BoxLayout:
            canvas.before:
                Color:
                    rgba: (213/255, 222/255 , 216/255, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            id: toolbar
            pos_hint: {'x': 0, 'y': 0}
            size_hint: 0.2, 1
            orientation: 'vertical'

            ScrollView:
                #size_hint: 1, None
                height: self.parent.height - 70
                BoxLayout:
                    id: folder_box
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: [30, 10, 10, 10]
                    spacing: 10

            Button:
                #text: 'Add Folder'
                size_hint: (0.4, 0.05)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: root.show_popuptoolbar()

        Button:
            id: t_button
            size_hint: None, None
            size: 30, 30
            pos_hint: {'x': 0.2, 'y': 0.95}
            on_release:
                root.toggle_toolbar()
            background_normal: ''  # Set to empty to remove default background
            background_down: ''    # Set to empty to remove default background
            background_color: 0, 0, 0, 0  # Make the button background transparent
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Ensure the icon is visible
                Rectangle:
                    id: arrow_icon
                    source: 'left-arrow.png'
                    size: self.size
                    pos: self.pos


        Button:
            text: "Add Card"
            pos_hint: {"x": 0.87}
            size_hint: (0.13, 0.1)
            font_size: 20
            on_release: root.btn()

        Button:
            text: "Edit"
            pos_hint: {"x": 0.87, "y" : 0.1}
            size_hint: (0.13, 0.1)
            font_size: 20
            on_release:
                app.root.current = "edit"
                root.manager.transition.direction = "left"

        Label:
            id: question_label
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.7}

        Label:
            id: answer_label
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Label:
            id: category_label
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.3}

        Label:
            id: learnmodeCategory
            text: "Kategorie"
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            halign: "center"
            valign: "middle"
            text_size: self.size

        Label:
            id: learnmodeQuestion
            text: "Frage"
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            halign: "center"
            valign: "middle"
            text_size: self.size

        Label:
            id: learnmodeAnswer
            text: "Antwort anzeigen"
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            halign: "center"
            valign: "middle"
            text_size: self.size

        Button:
            text: "Next"
            font_size: 16
            size_hint: (0.2, 0.05)
            pos_hint: {"center_x": 0.5, "y": 0.025}
            on_release: root.nextCard()

        Button:
            #text: "Show/Hide Answer"
            font_size: 16
            size_hint: (0.2, 0.05)
            background_color: 0,0,0,0
            pos_hint: {"center_x": 0.5, "y": 0.12}
            on_release: root.toggle_answer_visibility()
            Image:
                source: "ressources\eye-tracking (1).png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size_hint: (0.1,0.025)
        #---------------Start Rating Buttons------------
        Button:
            id: ratingFalse
            pos_hint: {"center_x": 0.4, "y": 0.25}
            size_hint: (0.05, 0.05)
            opacity: 0  # Initially hidden
            background_color: 0,0,0,0
            Image:
                source: "ressources\schlecht.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: ratingMiddle
            pos_hint: {"center_x": 0.5, "y": 0.25}
            size_hint: (0.05, 0.05)
            opacity: 0  # Initially hidden
            background_color: 0,0,0,0
            Image:
                source: "ressources\geht.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: ratingGood
            pos_hint: {"center_x": 0.6, "y": 0.25}
            size_hint: (0.05, 0.05)
            opacity: 0  # Initially hidden
            background_color: 0,0,0,0
            Image:
                source: "ressources\supi.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

<PopupToolbar>:
    folder_name_input: folder_name_input
    Button:
        text: "Create Folder"
        pos_hint: {'x': 0, 'y': 0}
        size_hint: 0.5, 0.2
        on_release: root.create_folder()
    TextInput:
        id: folder_name_input
        hint_text: "Type Folder Name"
        pos_hint: {'x': 0, 'y': 0.5}
        size_hint: 1, 0.3

<Folder>:
    orientation: 'horizontal'
    size_hint_y: None
    height: self.minimum_height
    padding: [10, 10, 10, 10]
    spacing: 10

    Image:
        id: folder_icon
        source: 'folderclosed.png'
        size_hint: None, None
        size: 30, 30
        allow_stretch: True
        keep_ratio: True

    Button:
        text: root.folder_name
        size_hint_y: None
        height: 30
        valign: 'middle'
        halign: 'left'
        on_release: 
            root.change_icon_folder()
            root.reset_cards()
            root.get_all_cards_for_category(root.folder_name)
        

    BoxLayout:
        id: content
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height

<PopupAddCard>:
    Button:
        id: addCard
        text: "Add Card"
        size_hint: (0.25, 0.1)
        font_size: 20
        pos_hint: {"center_x": 0.5, "center_y": 0.9}
    TextInput:
        id: questionName
        hint_text: "Type Question"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
    TextInput:
        id: questionAnswer
        hint_text: "Type Answer"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    TextInput:
        id: questionCategory
        hint_text: "Type Category"
        size_hint: (0.8, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.3}

<Button>:
    color: 0.5, 0.5, 0.8, 1
    font_size: 8

<Label>:
    font_size: 32
    size_hint: (0.3, 0.3)
    color: 0.3, 0.6, 0.7, 1

<TextInput>:
    font_size: 16
    size_hint: (0.3, 0.1)
    color: 0.3, 0.6, 0.7, 1

<SecondWindow>:
    name: "edit"

    FloatLayout:
        Button:
            background_color: 0,0,0,0
            font_size: 16
            size_hint: (0.2, 0.05)
            pos_hint: {"center_x": 0.5, "y": 0.05}
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"
            Image:
                source: "ressources\home.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size_hint: (0.1,0.025)
        Spinner:
            id: category_spinner
            text: 'Select Category'
            values: ("Schwanek", "Dödel", "Riemen", "Jürgen")
            size_hint: None, None
            size: 200, 44
            pos_hint: {'center_x': 0.5, "y":0.3}
            

