#:kivy 1.0.9

WindowManager:
    FirstWindow:
    SecondWindow:

<FirstWindow>:
    name: "first_window"
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        BoxLayout:
            canvas.before:
                Color:
                    rgba: (213/255, 222/255 , 216/255, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            id: toolbar
            pos_hint: {'x': 0, 'y': 0}
            size_hint: 0.2, 1
            orientation: 'vertical'

            ScrollView:
                #size_hint: 1, None
                height: self.parent.height - 70
                BoxLayout:
                    id: folder_box
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: [30, 10, 10, 10]
                    spacing: 10

            Button:
                #text: 'Add Folder'
                size_hint: (0.4, 0.05)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: root.show_popuptoolbar()
                background_color: 0,0,0,0
                Image:
                    source: "Bild.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size_hint: None, None
                    size: 35,35



        Button:
            id: t_button
            size_hint: None, None
            size: 30, 30
            pos_hint: {'x': 0.2, 'y': 0.97}
            on_release:
                root.toggle_toolbar()
            background_normal: ''  # Set to empty to remove default background
            background_down: ''    # Set to empty to remove default background
            background_color: 0, 0, 0, 0  # Make the button background transparent
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Ensure the icon is visible
                Rectangle:
                    id: arrow_icon
                    source: 'ressources\left-arrow.png'
                    size: self.size
                    pos: self.pos



        Button:
            text: "Add Card"
            pos_hint: {"x": 0.87}
            size_hint: (0.13, 0.1)
            font_size: 20
            on_release: root.btn()

        Button:
            text: "Edit"
            pos_hint: {"x": 0.87, "y" : 0.1}
            size_hint: (0.13, 0.1)
            font_size: 20
            on_release:
                app.root.current = "edit"
                root.manager.transition.direction = "left"
#----------------------Start Inhalt Lernkarten-------------------
        Label:
            id: question_label
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.7}

        Label:
            id: answer_label
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Label:
            id: category_label
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.3}

        Label:
            id: learnmodeCategory
            text: "Kategorie"
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            halign: "center"
            valign: "middle"
            text_size: self.size

        Label:
            id: learnmodeQuestion
            text: "Frage"
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            halign: "center"
            valign: "middle"
            text_size: self.size

        Label:
            id: learnmodeAnswer
            text: ""
            size_hint: (0.8, 0.2)
            pos_hint: {"center_x": 0.5, "y": 0.35}
            halign: "center"
            valign: "middle"
            text_size: self.size

        Button:
            text: "Next"
            font_size: 16
            size_hint: (0.2, 0.05)
            pos_hint: {"center_x": 0.5, "y": 0.025}
            on_release: root.nextCard()

        Button:
            #text: "Show/Hide Answer"
            font_size: 16
            size_hint: (0.2, 0.05)
            background_color: 0,0,0,0
            pos_hint: {"center_x": 0.5, "y": 0.12}
            on_release: root.toggle_answer_visibility()
            Image:
                id: toggle_image  # ID für das Bild
                source: root.eye_icon  # Verwendung der `eye_icon`-Property als Bildquelle
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size_hint: (0.1,0.025)

        Label:
            id: toggle_eye_label
            text: "Antwort anzeigen"  
            size_hint: (0.2, 0.05)
            pos_hint: {"center_x": 0.5, "y": 0.070}
            halign: "center"
            valign: "middle"
            font_size: 12
            color: 0.5, 0.5, 0.5, 1
#----------------------Ende Inhalt Lernkarten-------------------

